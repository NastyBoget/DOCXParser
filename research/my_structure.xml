<!--Документ состоит из метаданных и содержимого-->
<!--метаданные (имя документа, размер и т. д.) - тег metadata-->
<!--содержимое - тег div с атрибутом type="document", внутри которого может быть последовательность вложенных друг в друга-->
<!--        элементов div с атрибутами типов-->
<!--основные типы:-->
<!--        list, item (для списков)-->
<!--        table, row, cell (для таблиц)-->
<!--        другие типы (chapter, section, subsection, ...)-->
<!--в краевых элементах div находится последовательность параграфов p,-->
<!--        текст объединяется в параграф, если у него общее оформление.-->
<!--        оформление параграфа - отступ, выравнивание (м. б. что-то еще) - в атрибутах ind, js.-->
<!--внутри параграфов - последовательность элементов r с общим оформлением.-->
<!--        оформление r - размер шрифта, начертание (м. б. что-то еще) - в атрибутах b, i, u, size-->
<!--если в r отсутствует какой-то из тегов b, i, u, то его значение по умолчанию считается равным "false".-->

<document>
    <metadata file_name="example.docx" size="5526">
    </metadata>
    <div type="document">
        <div type="header">
            <p ind="1200" js="center">
                <r size="26" b="true">
                    Пример документа
                </r>
            </p>
        </div>
        <div type="body">
            <div type="chapter">
                <div type="header">
                    <p ind="1200" js="center">
                        <r size="24" b="true">
                            Глава 1
                        </r>
                    </p>
                </div>
                <div type="body">
                    <p ind="1200" js="left">
                        <r size="22">
                            Какие то определения
                        </r>
                    </p>
                    <div type="section">
                        <div type="header">
                            <p ind="1200" js="center">
                                <r size="24" b="true">
                                    Статья 1
                                </r>
                            </p>
                        </div>
                        <div type="body">
                            <p ind="1200" js="left">
                                <r size="22">
                                    Определим определения
                                </r>
                            </p>
                        </div>
                    </div>
                    <div type="section">
                        <div type="header">
                            <p ind="1200" js="center">
                                <r size="24" b="true">
                                    Статья 2
                                </r>
                            </p>
                        </div>
                        <div type="body">
                            <p ind="1200" js="left">
                                <r size="22">
                                    Дадим пояснения
                                </r>
                            </p>
                            <div type="list">
<!--                                Здесь внутри так же должны быть теги p, r со стилями-->
                                <div type="item">1.2.1. Поясним за непонятное</div>
                                <div type="item">1.2.2. Поясним за понятное</div>
                                <div type="list">
                                    <div type="item">а) это даже ежу понятно</div>
                                    <div type="item">б) это ежу не понятно</div>
                                </div>
                                <div type="item">
                                    <div type="table">
                                        <div type="row">
                                            <div type="cell">Фамилия</div>
                                            <div type="cell">Имя</div>
                                        </div>
                                        <div type="row">
                                            <div type="cell">Иванов</div>
                                            <div type="cell">Иван</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p ind="1200" js="left">
                                <r size="22">Обычный параграф, внутри которого присутствует вcякая дичь в виде </r>
                                <r size="22" i="true">курсива,</r>
                                <r size="22" b="true">жирного шрифта, </r>
                                <r size="22" u="true">подчёркнутого шрифта, </r>
                                <r size="22">а также шрифт </r>
                                <r size="40">большего размера </r>
                                <r size="18">и шрифт меньшего размера.</r>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</document>